            <Button x:Name="ButtonRozpocznij" Content="Rozpocznij" HorizontalAlignment="Center" Margin="0,72,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.553,-1.459" Click="ButtonRozpocznij_Click" Width="180"/>
